{
  "references": [
    {
      "path": "./plugins/astro-language/tsconfig.web.json"
    }
  ],
  "include": ["*.config.ts", "./plugins/**/*", "./config.json"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./config.tsbuildinfo",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "types": ["node"],
    "lib": ["ESNext"]
  }
}
